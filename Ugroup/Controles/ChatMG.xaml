<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Ugroup.Controles.ChatMG"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid
        Padding="6"
        ColumnDefinitions="1*, 3*"
        ColumnSpacing="2">
        <Image
            x:Name="imgGrupo"
            Grid.Column="0"
            Source="grupo.png"
            WidthRequest="70" />
        <StackLayout
            Grid.Column="1"
            Margin="5,0,0,0"
            Padding="2">
            <Label
                x:Name="nomGrupo"
                FontAttributes="Bold"
                FontSize="18"
                Text="Nombre Grupo">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Label_Tap" />
                </Label.GestureRecognizers>
            </Label>
            <Label
                x:Name="descGrupo"
                FontSize="14"
                Text="Descripcion Grupo"
                TextColor="#A2A2A2">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Label_Tap" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </Grid>
</ContentView>